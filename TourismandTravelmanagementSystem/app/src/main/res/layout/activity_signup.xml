<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kuakataseabeach">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:text="\t\tName"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textColor="@android:color/black"
            android:typeface="serif"/>

        <EditText
            android:id="@+id/etName"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textColor="@android:color/black"
            android:typeface="serif"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="\t\tCountry Name"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textColor="@android:color/black"
            android:typeface="serif"/>

        <EditText
            android:id="@+id/etCountryName"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textColor="@android:color/black"
            android:typeface="serif"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="\t\tEmail"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textColor="@android:color/black"
            android:typeface="serif"/>

        <EditText
            android:id="@+id/etEmail"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textColor="@android:color/black"
            android:typeface="serif"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="\t\tGender"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textColor="@android:color/black"
            android:typeface="serif"/>

        <EditText
            android:id="@+id/etGender"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textColor="@android:color/black"
            android:typeface="serif"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="\t\tUsername"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textColor="@android:color/black"
            android:typeface="serif"/>

        <EditText
            android:id="@+id/etUsername"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textColor="@android:color/black"
            android:typeface="serif"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="\t\t\t\t\t\t\t\t\t\t\t\t\t\tPassword"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textColor="#000000"
            android:typeface="serif"/>
        <EditText
            android:id="@+id/etPassword"
            android:textSize="18sp"
            android:hint="\t\t\t\t\t\t\t\t\t\t\t\t\t\t\tPassword"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:inputType="textPassword"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textColor="#000000"
            android:typeface="serif"/>

        <Button
            android:id="@+id/submit"
            android:text="Signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textColor="@android:color/black"
            android:typeface="serif"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             >



            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="32sp"
                android:textStyle="italic"
                android:typeface="serif"
                android:text="Back"
                android:id="@+id/back"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                />

        </RelativeLayout>

    </LinearLayout>
</ScrollView>
